<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginBottom="@dimen/spacing_4"
    android:background="@drawable/bg_answer_normal_with_badge"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/spacing_12"
    android:paddingBottom="@dimen/spacing_12">

    <TextView
        android:id="@+id/answerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_28"
        android:layout_marginEnd="@dimen/spacing_8"
        android:fontFamily="@font/root_ui_medium"
        android:textColor="@color/text_light"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>