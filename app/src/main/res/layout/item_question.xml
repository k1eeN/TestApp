<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/questionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_8"
        android:background="@color/surface_dark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/questionIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip"
                android:fontFamily="@font/root_ui_medium"
                android:paddingHorizontal="@dimen/size_7"
                android:paddingVertical="@dimen/size_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                tools:text="14" />

            <TextView
                android:id="@+id/questionScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_4"
                android:background="@drawable/bg_chip_transparent"
                android:fontFamily="@font/root_ui_medium"
                android:paddingHorizontal="@dimen/spacing_10"
                android:paddingVertical="@dimen/size_5"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_12"
                tools:text="Баллы за вопрос: 20" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/size_0"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivDone"
                android:layout_width="@dimen/size_26"
                android:layout_height="@dimen/size_26"
                android:contentDescription="@null"
                android:src="@drawable/ic_done_yellow"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/questionTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_12"
            android:fontFamily="@font/root_ui_medium"
            android:text="@string/topic_placeholder"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8"
            android:fontFamily="@font/root_ui_medium"
            android:text="@string/question_placeholder"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/answersRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_12"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>

    <View
        android:id="@+id/questionDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginHorizontal="@dimen/spacing_8"
        android:layout_marginTop="@dimen/spacing_24"
        android:layout_marginBottom="@dimen/spacing_24"
        android:background="@color/divider_light_12" />

</LinearLayout>
