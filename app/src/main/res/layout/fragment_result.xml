<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@android:color/transparent"
            app:contentInsetEnd="@dimen/size_0"
            app:contentInsetStart="@dimen/size_0"
            app:contentInsetStartWithNavigation="@dimen/size_0"
            app:title="">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:contentDescription="@string/avatar"
                    android:src="@drawable/avatar_stub"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_0"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btnInfo"
                    style="@style/Widget.App.IconButton"
                    android:contentDescription="@string/info"
                    android:src="@drawable/ic_info" />

                <ImageButton
                    android:id="@+id/btnCap"
                    style="@style/Widget.App.IconButton"
                    android:layout_marginStart="@dimen/spacing_8"
                    android:contentDescription="@string/education"
                    android:src="@drawable/ic_school" />

                <ImageButton
                    android:id="@+id/btnSearch"
                    style="@style/Widget.App.IconButton"
                    android:layout_marginStart="@dimen/spacing_8"
                    android:contentDescription="@string/search"
                    android:src="@drawable/ic_search" />

                <ImageButton
                    android:id="@+id/btnMenu"
                    style="@style/Widget.App.IconButton"
                    android:layout_marginStart="@dimen/spacing_8"
                    android:layout_marginEnd="@dimen/spacing_16"
                    android:contentDescription="@string/menu"
                    android:src="@drawable/ic_menu" />
            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

        <LinearLayout
            android:id="@+id/backRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/spacing_16"
            android:paddingTop="@dimen/spacing_6"
            android:paddingEnd="@dimen/spacing_16"
            android:paddingBottom="@dimen/spacing_6">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/icon_size_24"
                android:layout_height="@dimen/icon_size_24"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/text_light" />

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:fontFamily="@font/root_ui_medium"
                android:text="@string/back"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_16"
            android:paddingEnd="@dimen/spacing_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_24"
                    android:layout_height="@dimen/icon_size_24"
                    android:contentDescription="@string/test"
                    android:src="@drawable/ic_test"
                    app:tint="@color/text_muted" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_8"
                    android:fontFamily="@font/root_ui_medium"
                    android:text="@string/test_tv"
                    android:textColor="@color/text_muted"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:fontFamily="@font/root_ui_medium"
                android:text="@string/name_test"
                android:textColor="@color/text_title"
                android:textSize="@dimen/text_size_22"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/chipReward1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/chip_height"
                    android:background="@drawable/bg_pill_dark_score"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/spacing_8"
                    android:paddingEnd="@dimen/spacing_8">

                    <TextView
                        android:id="@+id/tvReward1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/root_ui_medium"
                        android:text="@string/maximum_score"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chipReward2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/chip_height"
                    android:layout_marginStart="@dimen/spacing_4"
                    android:background="@drawable/bg_pill_dark_score"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/spacing_8"
                    android:paddingEnd="@dimen/spacing_8">

                    <TextView
                        android:id="@+id/tvReward2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/root_ui_medium"
                        android:text="@string/passing_score"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_48"
            android:background="@drawable/bg_result_card"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_16"
            android:paddingTop="@dimen/spacing_14"
            android:paddingEnd="@dimen/spacing_16"
            android:paddingBottom="@dimen/spacing_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_24"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivResultIcon"
                    android:layout_width="@dimen/icon_size_24"
                    android:layout_height="@dimen/icon_size_24"
                    android:layout_marginTop="@dimen/size_1"
                    android:layout_marginEnd="@dimen/spacing_8"
                    android:contentDescription="@string/result"
                    android:src="@drawable/ic_fire" />

                <TextView
                    android:id="@+id/tvResultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/root_ui_medium"
                    android:text="@string/result"
                    android:textColor="@color/text_title"
                    android:textSize="@dimen/text_size_24"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resultBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_24"
                android:layout_marginBottom="@dimen/size_32"
                android:background="@drawable/bg_result_body"
                android:orientation="vertical"
                android:padding="@dimen/spacing_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvScoreLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/root_ui_medium"
                            android:text="@string/score"
                            android:textColor="@color/text_secondary_light"
                            android:textSize="@dimen/text_size_14" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/scoreText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/spacing_8"
                                android:fontFamily="@font/root_ui_medium"
                                android:text="@string/score_value_placeholder"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_32"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="@dimen/size_1"
                                android:layout_height="@dimen/size_28"
                                android:layout_marginTop="@dimen/spacing_6"
                                android:background="@color/surface_dark_4a" />

                            <TextView
                                android:id="@+id/maxScoreText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_8"
                                android:fontFamily="@font/root_ui_medium"
                                android:text="@string/score_value_placeholder"
                                android:textColor="@color/text_muted"
                                android:textSize="@dimen/text_size_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/statusPill"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:background="@drawable/bg_status_pill"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/spacing_10"
                        android:paddingEnd="@dimen/spacing_10">

                        <ImageView
                            android:id="@+id/ivStatus"
                            android:layout_width="@dimen/icon_size_12"
                            android:layout_height="@dimen/icon_size_12"
                            android:layout_marginEnd="@dimen/spacing_6"
                            android:contentDescription="@string/done"
                            android:src="@drawable/ic_check_circle" />

                        <TextView
                            android:id="@+id/resultStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/root_ui_medium"
                            android:text="@string/done"
                            android:textColor="@color/success_light"
                            android:textSize="@dimen/text_size_13" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:layout_marginBottom="@dimen/spacing_12"
                    android:background="@color/surface_dark_4a" />

                <TextView
                    android:id="@+id/correctText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/root_ui_medium"
                    android:text="@string/correct_answers_placeholder"
                    android:textColor="@color/text_secondary_light"
                    android:textSize="@dimen/text_size_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStartLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_35"
                        android:fontFamily="@font/root_ui_medium"
                        android:text="@string/start_date"
                        android:textColor="@color/text_secondary_light"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_28"
                        android:background="@drawable/bg_time_chip"
                        android:fontFamily="@font/root_ui_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/spacing_10"
                        android:paddingEnd="@dimen/spacing_10"
                        android:text="@string/start_time_placeholder"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_28"
                        android:layout_marginStart="@dimen/spacing_4"
                        android:background="@drawable/bg_time_chip"
                        android:fontFamily="@font/root_ui_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/spacing_10"
                        android:paddingEnd="@dimen/spacing_10"
                        android:text="@string/date_full_placeholder"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvEndLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_6"
                        android:layout_weight="1"
                        android:fontFamily="@font/root_ui_medium"
                        android:text="@string/end_date"
                        android:textColor="@color/text_secondary_light"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_28"
                        android:layout_marginEnd="@dimen/spacing_4"
                        android:background="@drawable/bg_time_chip"
                        android:fontFamily="@font/root_ui_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/spacing_10"
                        android:paddingEnd="@dimen/spacing_10"
                        android:text="@string/end_time_placeholder"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_28"
                        android:background="@drawable/bg_time_chip"
                        android:fontFamily="@font/root_ui_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/spacing_10"
                        android:paddingEnd="@dimen/spacing_10"
                        android:text="@string/date_full_placeholder"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        style="@style/Widget.TestApp.BottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginEnd="@dimen/spacing_16"
        android:background="@drawable/bg_bottom_bar_menu"
        app:itemIconTint="@drawable/bottom_nav_icon"
        app:itemTextColor="@drawable/bottom_nav_icon"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_result" />

</FrameLayout>
